<%- include('../includes/head.ejs') %>
</head>

<body>
    <div class="container" style="margin-bottom: 10px;">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="<%= path === '/admin/dashboard' ? 'active' : '' %> nav-link" href="/admin/dashboard">Shop</a>
            </li>
            <li class="nav-item">
                <a class="<%= path === '/admin/add' ? 'active' : '' %> nav-link" href="/admin/add">Add
                    Products
                </a>
            </li>
            <li class="nav-item">
                <a class="<%= path === '/admin/edit_delete' ? 'active' : '' %> nav-link"
                    href="/admin/edit_delete">Modify
                    Products
                </a>
            </li>
            <li class="nav-item">
                <a class="<%= path === '/admin/logout' ? 'active' : '' %> nav-link" href="/admin/logout">Logout</a>
            </li>
        </ul>
    </div>
    <% if (prods.length > 0) { %>
    <div class="container card-columns">
        <% for (let product of prods) { %>
        <div class="card">
            <img class="card-img-top" src="<%= product.imageUrl %>" alt="<%= product.title %>">
            <div class="card-body">
                <h1 class="card-title"><%= product.title %></h1>
                <p class="card-text"><%= product.description %></p>
                <p class="card-text">$
                    <%= product.price %>
                </p>
                <a href="/admin/edit/<%= product.id %>?edit=true"
                    class="btn btn-primary form-control form-group">Edit</a>
                <form action="/admin/delete" method="POST">
                    <input type="hidden" value="<%= product.id %>" name="productId">
                    <button class="btn btn-danger form-control form-group" type="submit">Delete</button>
                </form>

            </div>
        </div>
        <% } %>
    </div>
    <% } else { %>
    <div class="jumbotron container">
        <h1>No Products Here!</h1>
        <p>Add the products from add product.</p>
    </div>
    <% } %>
</body>

</html>