<%- include('../includes/head.ejs') %>
</head>

<body>
    <div class="container" style="margin-bottom: 10px;">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="<%= path === '/user/shop' ? 'active' : '' %> nav-link" href="/user/shop">Shop</a>
            </li>
            <li class="nav-item">
                <a class="<%= path === '/user/login' ? 'active' : '' %> nav-link" href="/user/login">Login
                </a>
            </li>
            <li class="nav-item">
                <a class="<%= path === '/user/register' ? 'active' : '' %> nav-link" href="/user/register">Register
                </a>
            </li>
        </ul>
    </div>
    <% if (prods.length > 0) { %>
    <div class="container card-columns">
        <% for (const product of prods) { %>
        <div class="card">
            <img class="card-img-top" src="<%= product.imageUrl %>" alt="<%= product.title %>">
            <div class="card-body">
                <h4 class="card-title"><%= product.title %></h4>
                <p class="card-text"><%= product.description %></p>
                <div>
                    <b>$</b>
                    <%= product.price %>
                </div>
            </div>
        </div>
        <% } %>
    </div>
    <% } else { %>
    <div class="jumbotron container">
        <h1>No Products In The Shop!</h1>
        <p>There are currently no product in our Shop.</p>
        <p>Please try again later.</p>
    </div>
    <% } %>
</body>

</html>